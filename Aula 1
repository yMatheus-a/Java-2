QUESTÃO NUMERO 1:

package aeso;

import java.util.Scanner;
import java.util.Locale;

public class aula {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Digite o primeiro lado do triangulo ");
        int n1 = sc.nextInt();
        System.out.println("Digite o segundo lado do triangulo ");
        int n2 = sc.nextInt();
        System.out.println("Digite o terceiro lado do triangulo ");
        int n3 = sc.nextInt();

        if (n1 == n2 && n1 == n3){
            System.out.println("é um triangulo equilátero");
        } else if (n1 == n2 || n1 == n3){
            System.out.println("é um triangulo escaleno");
        } else {
            System.out.println("é um triangulo isósceles");
        }

    }
}

QUESTÃO NUMERO 2:

package aeso;

import java.util.Scanner;
import java.util.Locale;

public class aula {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Digite seu peso");
        double peso = sc.nextDouble();
        System.out.println("Digite sua altura"); 
        double altura = sc.nextDouble();

        double imc;
        imc = peso/(altura * altura);

        if (imc < 16.9){
            System.out.println("Muito Abaixo do peso");
        } else if (imc <= 18.4){
            System.out.println("Abaixo do peso");
        } else if (imc >= 18.5 || imc <= 24.9){
            System.out.println("Peso normal");
        }else if (imc >= 25 || imc <= 29.9){
            System.out.println("Acima do peso");
        }else if (imc >= 30 || imc <= 34.9){
            System.out.println("Obesidade Grau 1");
        } else if (imc >= 35 || imc <= 40) {
            System.out.println("Obesidade Grau 2");
        } else if (imc > 40 )
            System.out.println("Obesidade Grau 3");
        }
    }
 
 QUESTÃO NUMERO 3:
 
 package aeso;

import java.util.Scanner;
import java.util.Locale;

public class aula {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Digite o primeiro numero: ");
        int n1 = sc.nextInt();
        System.out.println("Digite o segundo numero: ");
        int n2 = sc.nextInt();
        System.out.println("Digite o terceiro numero: ");
        int n3 = sc.nextInt();

        if (n1 % 2 == 0){
            System.out.println("O primeiro é par");
        } else {
            System.out.println("O primeiro é impar");
        } if (n2 % 2 == 0){
            System.out.println("O segundo é par");
        } else {
            System.out.println("O segundo é impar");
        } if (n3 % 2 == 0){
            System.out.println("O terceiro é par");
        } else {
            System.out.println("O terceiro é impar");
        }
        

    }
}
